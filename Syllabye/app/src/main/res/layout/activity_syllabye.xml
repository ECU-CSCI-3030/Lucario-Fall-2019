<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/startscreen" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="70dp">

                <Button
                    android:id="@+id/calendar_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="165dp"
                    android:layout_marginBottom="10dp"

                    android:text="@string/calendar_button"
                    android:textColor="#FFF"
                    android:background="@color/colorButton"
                    />

                <Button
                    android:id="@+id/reminders_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/calendar_button"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"

                    android:text="@string/reminders_button"
                    android:textColor="#FFFF"
                    android:background="@color/colorButton"/>

                <Button
                    android:id="@+id/upload_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/reminders_button"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"

                    android:text="@string/upload_button"
                    android:textColor="#FFFF"
                    android:background="@color/colorButton"/>

                <Button
                    android:id="@+id/settings_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/upload_button"
                    android:layout_gravity="center_horizontal"

                    android:text="@string/settings_button"
                    android:textColor="#FFF"
                    android:background="@color/colorButton"/>


        </LinearLayout>







</RelativeLayout>
